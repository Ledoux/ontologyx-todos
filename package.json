{
  "name": "ontologyx-todos",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "entitiex": "0.0.1",
    "enzyme": "^2.4.1",
    "filtex": "0.0.1",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.3.0",
    "react-scripts": "^0.6.0",
    "transactionx-client": "0.0.1",
    "transactionx-express": "0.0.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-saga": "^0.12.0",
    "ttab": "^0.5.0"
  },
  "main": "src/index.js",
  "scripts": {
    "build": "react-scripts build",
    "console": "babel-node server/utils/consoleDatabase.js --presets es2015,stage-3",
    "eject": "react-scripts eject",
    "kill": "killall -15 mongod",
    "link": "npm link ../entitiex && npm link ../filtex && npm link ../transactionx-client && npm link transactionx-express",
    "mongo": "mongod --dbpath data/mongodb_data",
    "prestart": "ttab exec npm run watch-all && ttab exec npm run serve && ttab exec npm run mongo",
    "reset": "babel-node server/utils/resetDatabase.js --presets es2015,stage-3",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "watch-entitiex": "cd ../entitiex && npm run watch",
    "watch-filtex": "cd ../filtex && npm run watch",
    "watch-transactionx-client": "cd ../transactionx-client && npm run watch",
    "watch-transactionx-express": "cd ../transactionx-express && npm run watch",
    "watch-all": "ttab npm run watch-entitiex && ttab npm run watch-filtex && ttab npm run watch-transactionx-client && ttab npm run watch-transactionx-express",
    "serve": "nodemon server/index.js --exec babel-node --watch server --watch ../transactionx-express/lib --presets es2015,stage-3"
  }
}
